<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:id="@+id/statusRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:id="@+id/minVentGrp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:padding="10sp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/minVentVal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:maxWidth="320dp"
                        android:minWidth="320dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="00.0"
                        android:textAlignment="textEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="100sp" />

                    <TextView
                        android:id="@+id/minVentUnitLbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="L/M"
                        android:textSize="30sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|center_horizontal">

                    <TextView
                        android:id="@+id/minVentLbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="1"
                        android:text="Minute Ventilation"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />
                </TableRow>

            </TableLayout>

            <TableLayout
                android:id="@+id/fio2Grp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:padding="10sp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/fio2Val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:maxWidth="320dp"
                        android:minWidth="320dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="000"
                        android:textAlignment="textEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="100sp" />

                    <TextView
                        android:id="@+id/fio2UnitLbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="%"
                        android:textSize="30sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/fio2Lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:text="FiO\u2082"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />
                </TableRow>

            </TableLayout>

            <TableLayout
                android:id="@+id/tidalVolGrp"
                android:layout_width="171dp"
                android:layout_height="match_parent"
                android:padding="10sp"
                tools:layout_span="2">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tidalVolVal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:maxWidth="320dp"
                        android:minWidth="320dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="000"
                        android:textAlignment="textEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="100sp" />

                    <TextView
                        android:id="@+id/tidalVolUnitLbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="mL"
                        android:textSize="30sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tidalVolLbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:text="Tidal Volume"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />
                </TableRow>

            </TableLayout>

        </TableRow>

        <TableRow
            android:id="@+id/alarmRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/alarmLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:layout_span="6"
                android:background="#33000000"
                android:text="\u26a0 Minute Ventilation High \u26a0"
                android:textAlignment="center"
                android:textColor="#FFEB3B"
                android:textSize="36sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/controlsRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp">

            <TableLayout
                android:id="@+id/breathRateTargetGrp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10sp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/breathingRateTargetDec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#33000000"
                        android:maxWidth="40dp"
                        android:maxHeight="60dp"
                        android:minWidth="40dp"
                        android:minHeight="60dp"
                        android:onClick="onDecrementTarget"
                        android:text="-"
                        android:textAlignment="center"
                        android:textColor="#CCC"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/breathingRateTarget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#80000000"
                        android:maxWidth="60dp"
                        android:maxHeight="60dp"
                        android:minWidth="100dp"
                        android:minHeight="60dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="12"
                        android:textAlignment="textEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/breathingRateTargetInc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#33000000"
                        android:maxWidth="40dp"
                        android:maxHeight="60dp"
                        android:minWidth="40dp"
                        android:minHeight="60dp"
                        android:onClick="onIncrementTarget"
                        android:text="+"
                        android:textAlignment="center"
                        android:textColor="#CCC"
                        android:textSize="36sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/breathingRateTargetLbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:text="Breathing Rate"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />
                </TableRow>

            </TableLayout>

            <TableLayout
                android:id="@+id/fio2TargetGrp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10sp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/fio2TargetDec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#33000000"
                        android:maxWidth="40dp"
                        android:maxHeight="60dp"
                        android:minWidth="40dp"
                        android:minHeight="60dp"
                        android:onClick="onDecrementTarget"
                        android:text="-"
                        android:textAlignment="center"
                        android:textColor="#CCC"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/fio2Target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#80000000"
                        android:maxWidth="100dp"
                        android:maxHeight="60dp"
                        android:minWidth="100dp"
                        android:minHeight="60dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="20"
                        android:textAlignment="textEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/fio2TargetInc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#33000000"
                        android:maxWidth="40dp"
                        android:maxHeight="60dp"
                        android:minWidth="40dp"
                        android:minHeight="60dp"
                        android:onClick="onIncrementTarget"
                        android:text="+"
                        android:textAlignment="center"
                        android:textColor="#CCC"
                        android:textSize="36sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/fio2TargetLbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:text="FiO\u2082"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />
                </TableRow>

            </TableLayout>

            <TableLayout
                android:id="@+id/peepTargetGrp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10sp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/peepTargetDec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#33000000"
                        android:maxWidth="40dp"
                        android:maxHeight="60dp"
                        android:minWidth="40dp"
                        android:minHeight="60dp"
                        android:onClick="onDecrementTarget"
                        android:text="-"
                        android:textAlignment="center"
                        android:textColor="#CCC"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/peepTarget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#80000000"
                        android:maxWidth="100dp"
                        android:maxHeight="60dp"
                        android:minWidth="100dp"
                        android:minHeight="60dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="5"
                        android:textAlignment="textEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/peepTargetInc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#33000000"
                        android:maxWidth="40dp"
                        android:maxHeight="60dp"
                        android:minWidth="40dp"
                        android:minHeight="60dp"
                        android:onClick="onIncrementTarget"
                        android:text="+"
                        android:textAlignment="center"
                        android:textColor="#CCC"
                        android:textSize="36sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/peepTargetLbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:text="PEEP"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />
                </TableRow>

            </TableLayout>

            <TableLayout
                android:id="@+id/inspPresTargetGrp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10sp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/inspPresTargetDec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#33000000"
                        android:maxWidth="40dp"
                        android:maxHeight="60dp"
                        android:minWidth="40dp"
                        android:minHeight="60dp"
                        android:onClick="onDecrementTarget"
                        android:text="-"
                        android:textAlignment="center"
                        android:textColor="#CCC"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/inspPresTarget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#80000000"
                        android:maxWidth="100dp"
                        android:maxHeight="60dp"
                        android:minWidth="100dp"
                        android:minHeight="60dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="20"
                        android:textAlignment="textEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/inspPresTargetInc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#33000000"
                        android:maxWidth="40dp"
                        android:maxHeight="60dp"
                        android:minWidth="40dp"
                        android:minHeight="60dp"
                        android:onClick="onIncrementTarget"
                        android:text="+"
                        android:textAlignment="center"
                        android:textColor="#CCC"
                        android:textSize="36sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/inspPresTargetLbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:text="Insp. Pressure"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />
                </TableRow>

            </TableLayout>

            <TableLayout
                android:id="@+id/ieRatioTargetGrp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10sp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/ieRatioTargetDec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#33000000"
                        android:maxWidth="40dp"
                        android:maxHeight="60dp"
                        android:minWidth="40dp"
                        android:minHeight="60dp"
                        android:onClick="onDecrementTarget"
                        android:text="-"
                        android:textAlignment="center"
                        android:textColor="#CCC"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/ieRatioTarget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#80000000"
                        android:maxWidth="100dp"
                        android:maxHeight="60dp"
                        android:minWidth="100dp"
                        android:minHeight="60dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="1:4"
                        android:textAlignment="textEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/ieRatioTargetInc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#33000000"
                        android:maxWidth="40dp"
                        android:maxHeight="60dp"
                        android:minWidth="40dp"
                        android:minHeight="60dp"
                        android:onClick="onIncrementTarget"
                        android:text="+"
                        android:textAlignment="center"
                        android:textColor="#CCC"
                        android:textSize="36sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/ieRatioTargetLbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:text="I:E Ratio"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />
                </TableRow>

            </TableLayout>

            <TableLayout
                android:id="@+id/tidalVolTargetGrp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10sp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tidalVolTargetDec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#33000000"
                        android:maxWidth="40dp"
                        android:maxHeight="60dp"
                        android:minWidth="40dp"
                        android:minHeight="60dp"
                        android:onClick="onDecrementTarget"
                        android:text="-"
                        android:textAlignment="center"
                        android:textColor="#CCC"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/tidalVolTarget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#80000000"
                        android:maxWidth="100dp"
                        android:maxHeight="60dp"
                        android:minWidth="100dp"
                        android:minHeight="60dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="400"
                        android:textAlignment="textEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/tidalVolTargetInc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#33000000"
                        android:maxWidth="40dp"
                        android:maxHeight="60dp"
                        android:minWidth="40dp"
                        android:minHeight="60dp"
                        android:onClick="onIncrementTarget"
                        android:text="+"
                        android:textAlignment="center"
                        android:textColor="#CCC"
                        android:textSize="36sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tidalVolTargetLbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:text="Tidal Volume"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />
                </TableRow>

            </TableLayout>

        </TableRow>

        <TableRow
            android:id="@+id/patientRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_span="2"
                android:text="Allow Patient Triggering"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_span="2"
                android:text="Patient Triggered"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:id="@+id/patientRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <RadioGroup
                android:id="@+id/patientTriggerSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_span="2"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/patientTriggerSwitchOn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:checked="true"
                    android:text="Allow"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/patientTriggerSwitchOff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Off"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/patientTriggeredLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_span="2"
                android:background="#FFC107"
                android:maxWidth="40dp"
                android:minWidth="40dp"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:id="@+id/buttonsRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp">

            <Button
                android:id="@+id/runPauseBtn"
                style="@android:style/Widget.DeviceDefault.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_span="2"
                android:background="#4CAF50"
                android:onClick="onRunPauseButtonClick"
                android:padding="10dp"
                android:text="Run \u25b6"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/spacerBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:clickable="false"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/silenceAlarmBtn"
                style="@android:style/Widget.DeviceDefault.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_span="2"
                android:background="#FFEB3B"
                android:onClick="onSilenceAlarmButtonClick"
                android:padding="10dp"
                android:text="Silence Alarm"
                android:textColor="#000000"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="display" />
        </TableRow>

    </TableLayout>

</FrameLayout>
